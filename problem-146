#include <stdio.h>
#include <time.h>

int main() {
    time_t t = time(NULL);
    struct tm tm_info = *localtime(&t);

    printf("Date (DD-MM-YYYY): %02d-%02d-%04d\n", tm_info.tm_mday, tm_info.tm_mon+1, tm_info.tm_year+1900);
    printf("Date (MM/DD/YYYY): %02d/%02d/%04d\n", tm_info.tm_mon+1, tm_info.tm_mday, tm_info.tm_year+1900);
    printf("Date (YYYY.MM.DD): %04d.%02d.%02d\n", tm_info.tm_year+1900, tm_info.tm_mon+1, tm_info.tm_mday);

    return 0;
}

/*
Output (example):
Date (DD-MM-YYYY): 21-11-2025
Date (MM/DD/YYYY): 11/21/2025
Date (YYYY.MM.DD): 2025.11.21
*/
